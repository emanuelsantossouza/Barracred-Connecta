programa {
  // Calcular o resto da divisão de dois números inteiros.
  funcao inicio() {
    real valor1, valor2, resultado, calculo

    escreva("Informe o valor o 1º: ")
    leia(valor1)

    escreva("Informe o valor o 2º: ")
    leia(valor2)

    calculo = (valor1 + valor2)

    resultado = calculo % 2 = 0

    escreva(resultado)
  }
}
