programa {
  // Calcular a área de um losango dado os comprimentos das diagonais.
  funcao inicio() {
    real diagonal1, diagonal2

    escreva("Qual será a diagonal 1: ")
    leia(diagonal1)

    escreva("Qual será a diagonal 2: ")
    leia(diagonal2)

    escreva("A área do Losango é: ", (diagonal1 * diagonal2)/2)
  }
}
