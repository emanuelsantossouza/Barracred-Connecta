programa {
  // Calcular a média aritmética de três números.
  funcao inicio() {
    real num1, num2, num3, resultado

    escreva("Escrava o 1º valor: ")
    leia(num1)
    escreva("Escrava o 2º valor: ")
    leia(num2)
    escreva("Escrava o 3º valor: ")
    leia(num3)

    resultado = (num1 + num2 + num3) / 3
  }
}
